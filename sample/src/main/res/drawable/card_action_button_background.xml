<?xml version="1.0" encoding="utf-8"?>
<layer-list
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <item
        android:id="@+id/foreground"
        android:top="@dimen/card_action_button_border_size"
        android:bottom="@dimen/card_action_button_border_size"
        android:left="@dimen/card_action_button_border_size"
        android:right="@dimen/card_action_button_border_size">

        <shape
            android:shape="rectangle">

            <corners
                android:topLeftRadius="@dimen/card_action_button_background_internal_corner_radius"
                android:topRightRadius="@dimen/card_action_button_background_internal_corner_radius"
                android:bottomLeftRadius="@dimen/card_action_button_background_internal_corner_radius"
                android:bottomRightRadius="@dimen/card_action_button_background_internal_corner_radius" />

            <stroke
                android:color="@android:color/white"
                android:width="@dimen/card_action_button_border_size"/>

        </shape>

    </item>

</layer-list>